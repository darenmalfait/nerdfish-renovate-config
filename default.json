{
  "extends": ["local>darenmalfait/nerdfish-renovate-config:shared"],
  "packageRules": [
    {
      "groupName": "all nerdfish packages",
      "matchPackagePatterns": ["@nerdfish/*"]
    },
    {
      "groupName": "patch dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["patch"]
    },
    {
      "groupName": "minor dependencies",
      "groupSlug": "all-minor",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["minor"]
    }
  ]
}
